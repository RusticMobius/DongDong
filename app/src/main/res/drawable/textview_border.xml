<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
  android:shape="rectangle">
  <!-- 设置框内填充颜色 -->
  <solid android:color="#00FFFFFF" />
  <!-- 设置边框宽度和颜色 -->
  <stroke
    android:width="3dp"
    android:color="#6D888787"
    />
  <!-- 设置圆角半径 -->
  <corners android:radius="24dp" />
  <!-- 设置边距 -->
  <padding
    android:bottom="5dp"
    android:left="5dp"
    android:right="5dp"
    android:top="5dp" />

</shape>
