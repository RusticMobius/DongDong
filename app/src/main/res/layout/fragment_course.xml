<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CourseFragment"
    android:background="@drawable/background_gradient_purple"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
      android:id="@+id/courseBackgroundImg"
      android:layout_width="330dp"
      android:layout_height="151dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/course0" />

    <TextView
      android:id="@+id/courseNameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="32dp"
      android:fontFamily="@font/nunito_bold"
      android:text="一个运动课程"
      android:textSize="40dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/courseBackgroundImg" />

    <TextView
      android:id="@+id/tipsText"
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:background="@drawable/textview_border"
      android:paddingHorizontal="20dp"
      android:paddingTop="40dp"
      android:paddingBottom="20dp"
      android:scrollbars="vertical"
      android:text="Tips 1 for course \n\n\n\n Tips 2 for course \n \n \n Tips 3 for course \n \n \n Tips 4 for course \n \n Tips 5 for course \n\n"
      android:textSize="20dp"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginTop="48dp"
      app:layout_constraintTop_toBottomOf="@+id/courseNameText"
      tools:layout_editor_absoluteX="-15dp" />

    <TextView
      android:id="@+id/studyTipsGuideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="56dp"
      android:layout_marginTop="30dp"
      android:background="@color/white"
      android:fontFamily="@font/nunito_semibold"
      android:layerType="hardware"
      android:text=" TIPS FOR YOU "
      android:textColor="#6D888787"
      android:textSize="28dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/courseNameText" />

    <Button
      android:id="@+id/recordButton"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:text="START "
      android:layout_marginTop="24dp"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tipsText" />

    <ImageButton
      android:id="@+id/retButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="20dp"
      android:layout_marginTop="16dp"
      android:background="@color/none_select_state"
      app:srcCompat="@drawable/ic_baseline_arrow_back_32_blue" />
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
